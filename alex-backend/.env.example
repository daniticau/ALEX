# ALEX Environment Configuration
# Copy this file to .env and fill in your values

# Basic Settings
DEBUG=false
LOG_LEVEL=INFO
APP_NAME=ALEX

# Database
DATABASE_URL=sqlite:///./alex.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/alex

# API Keys (optional - only include the ones you want to use)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=120

# Default Model Settings
DEFAULT_MODEL=ollama/llama3.1:8b
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048

# CORS Settings (for frontend)
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Advanced Features
ENABLE_RAG=false
VECTOR_DB_URL=./vectordb

# Logging
LOG_FILE=./logs/alex.log